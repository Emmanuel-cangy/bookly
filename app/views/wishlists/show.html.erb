<div class="container container-name h2-text-container d-flex justify-content-between align-items-end">
  <div>
    <h2><%= @wishlist.name %></h2>
    <%= link_to "Back", wishlists_path, class:'btn btn-primary' %>
  </div>
  <%= link_to "Add a Book", new_wishlist_bookmark_path(@wishlist), class:'btn btn-success' %>
</div>

<div class="container wishlists-container">
  <div class="row row-container">
    <% @books.each do |book| %>
      <div class="card-container col-xs-12 col-sm-6 col-lg-3 d-flex flex-column">
        <div class='card-image' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/5/unsplash-kitsune-4.jpg?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=bc01c83c3da0425e9baa6c7a9204af81')"></div>
        <div>
          <h3><%= book.title %></h3>
          <div class="d-flex justify-content-between">
            <p>price:<%= book.price_per_day%>$</p>
            <%= link_to '🗑️', root_path, method: :delete, data: {confirm: "Do you want to delete #{book.title} list?"}, class: 'delete-btn' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
