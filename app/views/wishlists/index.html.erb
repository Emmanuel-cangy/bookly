<div class="container container-name h2-text-container d-flex justify-content-between align-items-end">
  <div>
    <h2>My Wishlists<h2>
    <%= link_to "Back", root_path, class:'btn btn-primary' %>
  </div>
  <%= link_to 'create', new_wishlist_path, class:"btn btn-success" %>
</div>





<div class="container wishlists-container">
  <div class="row">
    <% @wishlists.each do |wishlist| %>
      <div class="col-xs-12 col-sm-6 col-lg-3 d-flex justify-content-center">

        <div class='card-wishlist' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path wishlist.photo.key || ""%>')">
          <%# <p class="card-text"><%= wishlist.description %>
          <%= link_to wishlist.name, wishlist_path(wishlist), class:"card-name" %>
          <%= link_to "🗑️", wishlist_path(wishlist), method: :delete, data: {confirm: "Do you want to delete #{wishlist.name} list?"}, class:'delete-btn-wishlist' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

