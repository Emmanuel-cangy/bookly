<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/deqc25xt2/image/upload/v1654160206/book-banner-3_ddfmip.jpg);">
  <div class="container">
    <h1>My <span class="name-text">Bookly</span> Library</h1>
    <p>All your books in one place</p>
    <%# <a class="btn btn-flat" href="#">Apply now</a> %>
  </div>
</div>

<div class="container  h2-text-container d-flex justify-content-between align-items-end">
    <%= link_to "Back", root_path, class:'btn btn-primary' %>
    <a href="/books/new" class="text-decoration-none add-button"><i class="fas fa-plus-circle"></i>  Add a Book</a>
</div>

<div class="container grid-container">
  <% @books.each do |book| %>
    <div class="card-container d-flex flex-column">
      <div class='card-image' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path book.photo.key || "" %>')"></div>
      <div class="d-flex flex-column align-items-center">
        <div class="h3-text-details">
          <h3><%= book.title %></h3>
        </div>
        <p><%= link_to "More Details", book_path(book), class:'more-details-text' %></p>
        <div class="d-flex justify-content-between">
          <p>price:<%= book.price_per_day%>$</p>
          <%= link_to '🗑️', book_path(book), method: :delete, data: {confirm: "Do you want to delete #{book.title} list?"}, class: 'delete-btn' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
