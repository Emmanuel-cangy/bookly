<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/deqc25xt2/image/upload/v1654152846/book-banner2_kh2x6b.webp); background-size: auto;">
  <div class="container">
    <h1><span class="name-text">Bookly</span> <strong>brings love of books</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and get a book with someone near your location.</p>
  </div>
</div>

<div class="container h2-text-container d-flex justify-content-between align-items-center">
  <h2>List of Books</h2>
  <div class="search-form-control">
    <%= form_tag books_path, method: :get, class:'d-flex' do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a movie"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% if current_user %>
    <a href="/books/new" class="text-decoration-none"><i class="fas fa-plus-circle "></i>  Add a Book</a>
  <% end %>
</div>

<div class="container wishlists-container">
  <div class="row row-container">
    <% @books.each do |book| %>
      <div class="card-container col-xs-12 col-sm-6 col-lg-3 d-flex flex-column">
        <div class='card-image' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path book.photo.key || "" %>')"></div>
        <div class="d-flex flex-column align-items-center">
          <h3><%= book.title %></h3>
          <p><%= link_to "More Details", book_path(book), class:'more-details-text' %></p>
          <div class="d-flex justify-content-between">
            <p>price:<%= book.price_per_day%>$</p>
            <%= link_to '🗑️', book_path(book), method: :delete, data: {confirm: "Do you want to delete #{book.title} list?"}, class: 'delete-btn' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



